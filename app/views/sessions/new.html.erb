<div class="container sessions-container">

  <div class="row">
    <div class="col-md-4 col-md-offset-4">

      <h1>Sign In</h1>

      <form action="/session" method="post">
        <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
        <input class="form-control" name="user[email]" type="text" placeholder="Email address"><br>
        <input class="form-control" name="user[password]" type="password" placeholder="Password"><br>
        <input type="submit" value="Sign In" class="btn btn-default wide-button"><br>
      </form>
    </div>
  </div>
</div>
